{
    "compileOnSave": true,
    "compilerOptions": {
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "module": "commonjs",
      "outDir": "./target",
      "target": "ES2019",
      "sourceMap": true,
      "alwaysStrict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "declaration": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }